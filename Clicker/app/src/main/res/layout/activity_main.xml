<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="241dp"
        android:layout_height="224dp"
        android:layout_x="81dp"
        android:layout_y="108dp"
        android:text="Кнопка нажата 0 раз"
        android:textAlignment="center"
        android:textSize="38sp">
    </TextView>

    <Button
        android:id="@+id/main_btn"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_x="82dp"
        android:layout_y="563dp"
        android:text="@string/click_me">
    </Button>

    <ImageView
        android:id="@+id/plus_image"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_x="77dp"
        android:layout_y="364dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/minus_image"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_x="226dp"
        android:layout_y="364dp"
        app:srcCompat="@android:drawable/dialog_holo_dark_frame" />

</AbsoluteLayout>
